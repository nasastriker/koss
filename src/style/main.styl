@import "partials/variable.styl"

html
	min-height 100%
html
body
	background hite
	min-height 100%

a
	text-decoration none
	color inherit
	&:hover
		text-decoration none
.container-wrapper
	height: 100%
.menu
	background white
	height 100%
	position fixed
	box-shadow: 0 2px 4px rgba(0,0,0,.1)

	.menu-head
		padding: 0px 20px
		border-bottom: 1px solid hite
		a
			color dblue
			font-size: 42px

	.menu-wrap
		padding: 10px 0

	ul:not(.submenu)
		li:hover
			a
				background hite
				color #333
			.submenu
				a
					background #838d8f
					color #fff
		a
			padding: 10px 20px
			display: block
			font-size 16px
		span
			width: 200px
		i
			margin-right: 10px
	.submenu
		display none
		background #838d8f
		color #fff
		padding 15px 0
		li
			a
				padding 3px 20px
	&.wmin
		width 67px
		.show-wmin
			display block!important
		.hide-wmin
			display none!important
		

header
	.main-title
		max-width 70%
		width 100%
		float left
		position relative
		padding-right: 100px
	.control-panel
		position: absolute
		right: 0
		top 30px
		.c-item
			font-size 26px
			color: dblue
		a
			&:nth-child(2)
				margin 0 15px
	.search
		padding 25px 0 0 40px
		float right
		max-width 30%
		width 100%
		position relative
		input
			border-radius 5px
			background #eee
			box-shadow inset 0 1px 0 rgba(0, 0, 0, .2)
			border: none
			width 100%
			padding 10px 10px 10px 40px
		label
			position absolute
			font-size 26px
			color dblue
			top 28px
			left 50px
.content
	padding: 0 40px
	overflow: hidden
	margin-left: 250px
	margin-bottom: 80px

.wall
	max-width: 70%
	float left

.one-post
	background white
	margin-bottom 20px
	border-radius 5px
	box-shadow: 0 2px 4px rgba(0,0,0,.1)

.post-head
	padding 20px
	border-bottom 1px solid hite
	h2
		padding 0
		margin 0
		font-size 19px
.post-body
	padding 20px
	overflow hidden
	img
		float left
		margin-right 20px
	h3
		font-size: 18px



.aside
	padding-left 40px
	float left
	max-width 30%
	.one-feed
		color dblue
		margin 20px 0
		img
			float left
			margin-right: 10px
		h4
			text-transform: uppercase
			margin 0 0 5px
			font-size: 14px
			font-weight: 600
		p
			max-height 50px
			font-size: 12px
			overflow: hidden

// footer start here
footer
	background dark
	text-align center
	padding-bottom 10px
	position relative
	z-index 2

	.f-menu
		border-bottom 1px solid ddd
		display inline-block
		padding 40px 70px 30px
		margin-bottom 20px

	a
		color ddd
		margin 0 5px
		&:hover
			color dblue
	.copy
		color dblue
		line-height 12px
		

@media (max-width: 1200px)
	.content
		margin-left: 80px